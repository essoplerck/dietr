{% extends 'layout.jinja' %}

{% block title %}
  Dashboard
{% endblock title %}

{% block carousel %}
  {% if user %}
    <h1>Hallo {{ user.name }}!</h1>

    <br>

    <h2>Zoek een gepersonaliseerd recept!</h2>
    <a class="btn btn-primary btn-lg" href="{{ url_for('recipe.view') }}">Recept zoeken</a>

    <br><br><br>

    <h2>Wil je eerst nog je profiel aanpassen?</h2>
    <a class="btn btn-primary btn-lg" href="{{ url_for('profile.edit') }}">Profiel aanpassen</a>
  {% else %}
    <h1>Kies je dieet en weet wat je eet!</h1>

    <br>

    <h2>Maak nu een account aan!</h2>
    <a class="btn btn-primary btn-lg" href="{{ url_for('authentication.join') }}">Account aanmaken</a>

    <br><br><br>

    <h2>Heb je al een account?</h2>
    <a class="btn btn-primary btn-lg" href="{{ url_for('authentication.login') }}">Inloggen</a>
  {% endif %}
{% endblock carousel %}
